<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Register</title>
  <script src="https://kit.fontawesome.com/d89d9128cc.js" crossorigin="anonymous"></script>

  <style>
    body {
      background-image: url("https://wallpapercave.com/wp/wp8971234.jpg");
      background-repeat: no-repeat;
      background-size: cover;
      color: rgb(190, 251, 190);
      text-shadow: 0 5px 5px white;
    }

    header h1 {
      text-align: center;
      font-size: 7vh;
    }

    main {
      background-color: rgba(255, 255, 255, 0.141);
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 30%;
      position: relative;
      left: 35%;
      top: 5vh;
      height: 50vh;
      padding: 20px;
      border-radius: 10px;
      backdrop-filter: blur(5px);
      justify-content: space-around;
      box-shadow: 0 0 10px 10px whitesmoke;
    }

    main input {
      width: 100%;
      height: 4vh;
      margin-bottom: 10px;
      padding: 8px;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 5px;

    }

    #togglePassword,
    #togglePassword2 {
      position: relative;
      bottom: 5.5vh;
      background: none;
      border: none;
      left: 26vh;
    }

    #login-but {
      width: 100%;
      height: 4vh;
      color: rgb(190, 251, 190);
      background-color: rgba(0, 0, 0, 0.549);
      border: none;
      border-radius: 10px;
      cursor: pointer;
    }

    #anchor {
      color: whitesmoke;
    }

    main input[type="password"] {
      background-color: aliceblue;
    }
  </style>
</head>

<body>
  <header>
    <h1>NotiFy</h1>
  </header>
  <section>
    <% if(typeof message !=='undefined' ){ %>
      <p>
        <%= message%>
      </p>
      <% } %>
  </section>
  <main>
    <h1>Register</h1>
    <form action="/api/auth/register" method="post">

      <div>
        <input type="text" id="email" name="email" placeholder="Enter your email" required />
      </div>

      <div>
        <input type="password" id="password" name="password" pattern="[A-Za-z\d]{8,}$"
          placeholder="Enter your password (minimum 8 length)" required />
        <button id="togglePassword"><i class="fa-solid fa-eye"></i></button>
      </div>

      <div>
        <input type="password" id="cnfpassword" name="cnfpassword" pattern="[A-Za-z\d]{8,}$"
          placeholder="Confirm Password" required />
        <button id="togglePassword2"><i class="fa-solid fa-eye"></i></button>
      </div>

      <div>
        <button type="submit" id="login-but">Register</button>
      </div>
      <div>
        <p > Already have an account?  <a id="anchor" href="login">Login</a></p>
      </div>
    </form>
  </main>
  <script>
    document
      .getElementById("togglePassword")
      .addEventListener("click", function (e) {
        e.preventDefault();
        const passwordInput = document.getElementById("password");
        const type =
          passwordInput.getAttribute("type") === "password"
            ? "text"
            : "password";

        if (type === "password") {
          document.getElementById("togglePassword").innerHTML = '<i class="fa-solid fa-eye"></i>'
        }
        else {
          document.getElementById("togglePassword").innerHTML = '<i class="fa-solid fa-eye-slash"></i>'
        }
        passwordInput.setAttribute("type", type);
      });


    document
      .getElementById("togglePassword2")
      .addEventListener("click", function (e) {
        e.preventDefault();
        const passwordInput = document.getElementById("cnfpassword");
        const type =
          passwordInput.getAttribute("type") === "password"
            ? "text"
            : "password";
        if (type === "password") {
          document.getElementById("togglePassword2").innerHTML = '<i class="fa-solid fa-eye"></i>'
        }
        else {
          document.getElementById("togglePassword2").innerHTML = '<i class="fa-solid fa-eye-slash"></i>'
        }
        passwordInput.setAttribute("type", type);
      });
  </script>
</body>

</html>
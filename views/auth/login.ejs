<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login</title>
  <script src="https://kit.fontawesome.com/d89d9128cc.js" crossorigin="anonymous"></script>

  <style>
    body {
      background-image: url("https://wallpapercave.com/wp/wp8971234.jpg");
      background-repeat: no-repeat;
      background-size: cover;
      color: rgb(190, 251, 190);
      text-shadow: 0 5px 5px white;
    }

    header h1 {
      text-align: center;
      font-size: 7vh;
    }

    main {
      background-color: rgba(255, 255, 255, 0.141);
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 30%;
      position: relative;
      left: 35%;
      top: 5vh;
      height: 50vh;
      padding: 20px;
      border-radius: 10px;
      backdrop-filter: blur(5px); 
      justify-content: space-around;
      box-shadow: 0 0 10px 10px whitesmoke;
    }

    main input {
      width: 100%;
      height: 4vh;
      margin-bottom: 10px;
      padding: 8px;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 5px;

    }
    #togglePassword{
      position: relative;
      bottom: 5.5vh;
      background: none;
      border: none;
      left: 30vh;
    }
    #login-but{
      width: 100%;
      height: 4vh;
      color: rgb(190, 251, 190);
      background-color: rgba(0, 0, 0, 0.549);
      border: none;
      border-radius: 10px;
      cursor: pointer;
    }
    #anchor{
      color: whitesmoke;
    }


  </style>

</head>

<body>

  <header>
    <h1>NotiFy</h1>
  </header>

  <section>
    <% if(typeof message !=='undefined' ){ %>
    <p>
      <%= message %>
    </p>
    <% } %>
  </section>

  <main>
    <h1>Login</h1>

    <form action="/api/auth/login" method="post">
      <div>
        <input type="text" id="email" name="email" placeholder="Enter your email" required />
      </div>
      <div>
        <input type="password" id="password" name="password" placeholder="Enter your password" required />
        <button id="togglePassword"><i class="fa-solid fa-eye"></i></button>
      </div>
      <div>
        <button type="submit" id="login-but">Login</button>
      </div>
      <div>
        <p style="font-size:larger;">Don't have an account? <a href="register" id="anchor">Register</a></p>
      </div>
    </form>

  </main>

  <script>
    document.getElementById("togglePassword").addEventListener("click", function (e) {
      e.preventDefault();
      const passwordInput = document.getElementById("password");
      const type =
        passwordInput.getAttribute("type") === "password"
          ? "text"
          : "password";
      if(type === "password"){
        document.getElementById("togglePassword").innerHTML='<i class="fa-solid fa-eye"></i>'
      }
      else{
        document.getElementById("togglePassword").innerHTML='<i class="fa-solid fa-eye-slash"></i>'        
      }
      passwordInput.setAttribute("type", type);
    });
  </script>
</body>

</html>
